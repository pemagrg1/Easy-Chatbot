  <pattern>WHAT IS MY NAME</pattern>
  <template>
     Your name is <get name="name"/>.
  </template>
</category>

<category>
   <pattern>DO YOU KNOW WHO * IS?</pattern>
   <template>
      <srai>WHO IS <star/></srai>
   </template>
</category>
  
